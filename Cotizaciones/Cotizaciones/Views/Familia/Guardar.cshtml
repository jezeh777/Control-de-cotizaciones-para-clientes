@model FamiliaProductosModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Crear Familia de productos
    </div>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="Familia" method="post">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        

            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> Guardar</button>
            <a asp-action="Listado" asp-controller="Familia" class="btn btn-warning"> <i class="bi bi-arrow-left-square-fill"></i> Volver a la lista</a>
        </form>
    </div>
</div>


