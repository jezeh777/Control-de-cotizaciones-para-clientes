@model List<ProductosModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Listado de Productos
    </div>
    <div class="card-body">

        <a asp-action="Guardar" asp-controller="Productos" class="btn btn-success"><i class="bi bi-plus-circle-fill"></i> Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Stock</th>
                    <th>Precio</th>
                    <th>Familia</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Stock</td>
                        <td>@item.precio</td>
                        <td></td>
                        <td> <a asp-action="Editar" asp-controller="Productos" class="btn btn-primary btn-sm" asp-route-IdProducto="@item.IdPrudcuto"> <i class="bi bi-pencil-square"></i> Editar</a></td>
                        <td> <a asp-action="Eliminar" asp-controller="Productos" class="btn btn-danger btn-sm" asp-route-IdProducto="@item.IdPrudcuto"> <i class="bi bi-trash2-fill"></i> Eliminar</a></td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

